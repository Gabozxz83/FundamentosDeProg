<!-- Ejemplo para Cuadrado (similar para Triángulo y Círculo) -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Figuras Geométricas</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/figuras.js"></script>
</head>
<body>
    <div class="from-container">
        <h2>Figuras Geométricas</h2>
        
        <div class="figuras-contenedor">      
            <div class="figura-item">
                <img src="img/Cuadrado 1.png" alt="Cuadrado" class="figura-img">                
                <div class="boton-columna">
                    <input id="lado" type="number" class="numero-input" placeholder="Lado">          
                    <button class="boton-azul" onclick="calcularCuadrado()">Calcular</button>
                    <input id="resultado" type="text" class="numero-input" placeholder="Resultado" readonly>
                    <button class="boton-azul" onclick="window.location.href='/'">Inicio</button>
                </div>
            </div>
        </div>   
    </div>
    <script>
    function calcularCuadrado() {
    const lado = parseFloat(document.getElementById('lado').value);
    if (isNaN(lado) || lado <= 0) {
        alert('Uy ingrese un valor válido para el lado');
        return;
    }    
    
    const area = lado * lado;
    const perimetro = 4 * lado;
    
    document.getElementById('resultado').value = `Área: ${area.toFixed(0)} | Perím: ${perimetro.toFixed(0)}`;
}
    </script>
</body>
</html>