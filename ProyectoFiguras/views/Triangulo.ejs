<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Figuras Geométricas</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="from-container">
        <h2>Figuras Geométricas</h2>
        
        <div class="figuras-contenedor">      
            <div class="figura-item">
                <img src="img/Triangulo 2.png" alt="Triangulo" class="figura-img">                
                <div class="boton-columna">
                    <input id="lado1" type="number" class="numero-input" placeholder="Lado 1" min="0.01" step="0.01">
                    <input id="lado2" type="number" class="numero-input" placeholder="Lado 2" min="0.01" step="0.01">
                    <input id="lado3" type="number" class="numero-input" placeholder="Lado 3" min="0.01" step="0.01">
                    <button class="boton-azul" onclick="calcularTriangulo()">Calcular</button>
                    <input id="resultado" type="text" class="numero-input" placeholder="Resultado" readonly>
                    <button class="boton-azul" onclick="window.location.href='/'">Inicio</button>
                </div>
            </div>
        </div>   
    </div>
    <script>
    function calcularTriangulo() {
        const lado1 = parseFloat(document.getElementById('lado1').value);
        const lado2 = parseFloat(document.getElementById('lado2').value);
        const lado3 = parseFloat(document.getElementById('lado3').value);
        
        // Validaciones básicas
        if (isNaN(lado1) || isNaN(lado2) || isNaN(lado3) || 
            lado1 <= 0 || lado2 <= 0 || lado3 <= 0) {
            alert('Uy ingrese valores válidos para todos los lados');
            return;
        }
                
        if (lado1 + lado2 <= lado3 || 
            lado1 + lado3 <= lado2 || 
            lado2 + lado3 <= lado1) {
            alert('Pilas esta medidas no forman un triángulo válido.\nLa suma de dos lados debe ser mayor que el tercero, ojo.');
            return;
        }
        
        // Calcular perímetro
        const perimetro = lado1 + lado2 + lado3;
        
        // Calcular área usando fórmula de Herón
        const s = perimetro / 2; // semiperímetro
        const area = Math.sqrt(s * (s - lado1) * (s - lado2) * (s - lado3));
        
        // Mostrar resultados
        document.getElementById('resultado').value = 
            `Área: ${area.toFixed(2)} | Perím: ${perimetro.toFixed(0)}`;
    }
    </script>
</body>
</html>